<div id="user-add"><h2>Add User</h2>
	<div id="messages"><%= (typeof(errors) !== 'undefined') ? errors : "" %></div>
	<div id="login" class="body">
		<form class="pure-form" method="POST" action="/admin/users/">
			<input name="username" placeholder="Username" />
			<input name="email" placeholder="Email Address" />
			<input name="password" type="password" placeholder="Password" />
			
			<input class="pure-button pure-button-primary" type="submit" value="Save" />
		</form>
	</div>
</div>
<div id="user-listing">
	<h2>Users</h2>
	<table id="user-table">
		<tr>
			<th>Name</th>
			<th>Email</th>
		</tr>
		<% for(var i=0; i<users.length; i++) { %>
		<tr>
			<td><%= users[i].Name %></td>
			<td><a href="mailto:<%= users[i].Email %>"><%= users[i].Email %></a></td>
		</tr>
		<% } %>
	</table>
</div>